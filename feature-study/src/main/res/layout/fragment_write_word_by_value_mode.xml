<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/fragment_write_word_by_value_mode___text_view___value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_above="@id/fragment_write_word_by_value_mode___linear_layout___user_variant_with_button"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"

        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        tools:text="@string/value" />


    <ImageView
        android:id="@+id/fragment_write_word_by_value_mode___image_view___result"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/fragment_write_word_by_value_mode___linear_layout___user_variant_with_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_write_word_by_value_mode___text_input_layout___user_variant"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:hint="@string/word">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_write_word_by_value_mode___text_input_edit_text___user_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_write_word_by_value_mode___button___confirm"
            style="@style/MaterialButtonIconOnly"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:padding="0dp"

            app:icon="@drawable/ic_arrow_forward_white_24dp" />
    </LinearLayout>
</RelativeLayout>
