<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_collect_word_by_letters_mode___text_view___value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="8dp"
            tools:text="@string/value"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fragment_collect_word_by_letters_mode___image_view___result"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_collect_word_by_letters_mode___text_view___user_variant"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/fragment_collect_word_by_letters_mode___image_button___remove_letter"
            app:layout_constraintStart_toStartOf="@+id/fragment_mode4___scroll_view___letters_"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/word" />

        <ImageButton
            android:id="@+id/fragment_collect_word_by_letters_mode___image_button___remove_letter"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/shape_white_color_primary_20dp"
            android:src="@drawable/ic_backspace_color_primary_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_collect_word_by_letters_mode___text_view___user_variant"
            app:layout_constraintEnd_toEndOf="@+id/fragment_mode4___scroll_view___letters_"
            app:layout_constraintTop_toTopOf="@+id/fragment_collect_word_by_letters_mode___text_view___user_variant" />

        <ScrollView
            android:id="@+id/fragment_mode4___scroll_view___letters_"

            android:layout_width="324dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_collect_word_by_letters_mode___text_view___user_variant">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/fragment_collect_word_by_letters_mode___grid_layout___letters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="6"
                app:rowCount="10"/>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>