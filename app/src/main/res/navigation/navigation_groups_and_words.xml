<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_groups_and_words"
    app:startDestination="@id/groups_dest">

    <fragment
        android:id="@+id/groups_dest"
        android:name="ru.nikshlykov.englishwordsapp.ui.fragments.GroupsFragment"
        android:label="GroupsFragment"
        tools:layout="@layout/fragment_groups">
        <action
            android:id="@+id/action_groups_dest_to_subgroup_dest"
            app:destination="@id/subgroup_dest" />
    </fragment>
    <fragment
        android:id="@+id/subgroup_data_dest"
        android:name="ru.nikshlykov.englishwordsapp.ui.fragments.SubgroupDataFragment"
        android:label="SubgroupDataFragment"
        tools:layout="@layout/fragment_subgroup_data">
        <argument
            android:name="subgroupId"
            android:defaultValue="0L"
            app:argType="long" />
        <action
            android:id="@+id/action_subgroup_data_dest_to_groups_dest"
            app:destination="@id/groups_dest" />
    </fragment>
    <action
        android:id="@+id/action_global_subgroup_data_dest"
        app:destination="@id/subgroup_data_dest" />
    <fragment
        android:id="@+id/subgroup_dest"
        android:name="ru.nikshlykov.englishwordsapp.ui.fragments.SubgroupFragment"
        android:label="SubgroupFragment">
        <argument
            android:name="subgroup"
            app:argType="ru.nikshlykov.englishwordsapp.db.models.Subgroup" />
        <action
            android:id="@+id/action_subgroup_dest_to_groups_dest"
            app:destination="@id/groups_dest" />
        <action
            android:id="@+id/action_subgroup_dest_to_word_dest"
            app:destination="@id/word_dest" />
    </fragment>
    <fragment
        android:id="@+id/word_dest"
        android:name="ru.nikshlykov.englishwordsapp.ui.fragments.WordFragment"
        android:label="WordFragment"
        tools:layout="@layout/fragment_word">
        <action
            android:id="@+id/action_word_dest_to_subgroup_dest"
            app:destination="@id/subgroup_dest" />
        <argument
            android:name="startTo"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="word"
            app:argType="ru.nikshlykov.englishwordsapp.db.models.Word" />
    </fragment>
</navigation>