<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_profile"
    app:startDestination="@id/profile_dest">

    <fragment
        android:id="@+id/profile_dest"
        android:name="ru.nikshlykov.englishwordsapp.ui.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_dest_to_settings_dest"
            app:destination="@id/settings_dest" />
        <action
            android:id="@+id/action_profile_dest_to_modes_dest"
            app:destination="@id/modes_dest" />
    </fragment>
    <fragment
        android:id="@+id/modes_dest"
        android:name="ru.nikshlykov.englishwordsapp.ui.fragments.ModesFragment"
        android:label="ModesFragment"
        tools:layout="@layout/activity_modes" />
    <fragment
        android:id="@+id/settings_dest"
        android:name="ru.nikshlykov.englishwordsapp.ui.fragments.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>