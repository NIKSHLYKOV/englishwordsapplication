<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/fragment_profile___button___settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_settings_dark_blue_24dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_profile___frame_layout___modes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_profile___button___settings">

        <TextView
            android:id="@+id/fragment_profile___text_view___modes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/modes"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/fragment_profile___button___to_modes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:backgroundTint="@color/colorPrimary"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile___frame_layout___modes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fragment_profile___button___modes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"

            android:gravity="center|bottom"

            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_margin="8dp"

            android:text="@string/modes"
            android:textSize="18dp"
            android:textColor="@android:color/white"

            android:background="@drawable/shape_lightgreen_20dp"
            android:drawableTop="@drawable/ic_library_books_black_48dp"/>
        <Button
            android:id="@+id/fragment_profile___button___statistics"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"

            android:gravity="center|bottom"

            android:layout_margin="8dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"

            android:text="@string/statistics"
            android:textSize="18dp"
            android:textColor="@android:color/white"

            android:background="@drawable/shape_yellow_20dp"
            android:drawableTop="@drawable/ic_pie_chart_blue_24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>