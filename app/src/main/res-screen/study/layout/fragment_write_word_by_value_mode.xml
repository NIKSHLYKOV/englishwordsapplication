<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_write_word_by_value_mode___text_view___value"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:maxLines="3"
            tools:text="@string/value"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/fragment_write_word_by_voice_mode___image_view___result"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/fragment_write_word_by_value_mode___edit_text___user_variant"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="350dp"

            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="@string/word"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fragment_write_word_by_value_mode___button___confirm"/>

        <ImageButton
            android:id="@+id/fragment_write_word_by_value_mode___button___confirm"
            style="@style/BorderlessButton"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_marginEnd="8dp"

            app:srcCompat="@drawable/ic_arrow_forward_dark_blue_24dp"
            android:background="@drawable/shape_white_15dp"

            app:layout_constraintTop_toTopOf="@id/fragment_write_word_by_value_mode___edit_text___user_variant"
            app:layout_constraintBottom_toBottomOf="@id/fragment_write_word_by_value_mode___edit_text___user_variant"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>