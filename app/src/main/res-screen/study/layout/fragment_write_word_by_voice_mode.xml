<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_write_word_by_voice_mode___constraint_layout___main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/fragment_write_word_by_voice_mode___image_button___voice"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/shape_oval_white"
            android:contentDescription="voice_button"
            android:src="@drawable/ic_volume_up_dark_blue_48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fragment_write_word_by_voice_mode___image_view___result"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fragment_write_word_by_voice_mode___edit_text___user_variant"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="350dp"

            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="@string/word"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fragment_write_word_by_voice_mode___image_button___confirm" />

        <ImageButton
            android:id="@+id/fragment_write_word_by_voice_mode___image_button___confirm"
            style="@style/BorderlessButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="confirm_button"
            android:background="@drawable/shape_white_15dp"
            android:src="@drawable/ic_arrow_forward_dark_blue_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_write_word_by_voice_mode___edit_text___user_variant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_write_word_by_voice_mode___edit_text___user_variant" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>